<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BetAmount"
    android:background="#9C3903">

    <!-- Score (Top-Right Corner) -->
    <LinearLayout
        android:id="@+id/scoreContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="300sp"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="1000"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/scoreIcon"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:src="@drawable/ic_gem" />


    </LinearLayout>

    <!-- How much would you like to bet -->

    <!-- Seekbar -->
    <TextView
        android:id="@+id/textbet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/font1"
        android:text="How much would you like to bet"
        android:textColor="#000000"
        android:textSize="50dp" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="280dp"
        android:max="100" />

    <!-- Bet amount display -->
    <TextView
        android:id="@+id/scoredisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="340dp"
        android:fontFamily="@font/font1"
        android:text="10"
        android:textColor="#000000"
        android:textSize="90dp" />

    <!-- Continue button -->
    <TextView
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/font1"
        android:text="CONTINUE"
        android:textColor="#000000"
        android:textSize="100dp" />

</FrameLayout>
