<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Main_menu"
    android:background="#9C3903">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="?attr/actionBarSize"/>

    <LinearLayout
        android:id="@+id/scoreContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="300sp"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="1000"
            android:textColor="#000000"

            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/scoreIcon"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:src="@drawable/ic_gem" />


    </LinearLayout>


    <!-- Horizontal LinearLayout to arrange TextViews side by side -->
    <TextView
        android:id="@+id/main_menu"
        android:layout_width="350dp"
        android:layout_height="119dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:text="main menu"
        android:textColor="#000000"
        android:textSize="160dp" />

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/Settingsbutton"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="Settings"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:textSize="50dp"
            android:layout_marginEnd="8dp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/startbutton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="START"
            android:layout_weight="1"
            android:textSize="50dp"
            android:layout_marginEnd="8dp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="statistics"
            android:layout_weight="1"
            android:textSize="50dp"
            android:textColor="#000000"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/Medals"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="Medals"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:textSize="50dp"
            android:layout_marginEnd="8dp"
            android:textColor="#000000"
            />


    </LinearLayout>



</LinearLayout>

